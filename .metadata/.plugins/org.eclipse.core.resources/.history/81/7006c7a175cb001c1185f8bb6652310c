package chap04;

public class WileKeyControExample {

	public static void main(String[] args) {
		boolean run =true;
		int speed = 0;
		int keyCode = 0;
		
		while(run) { 
			System.out.println("----------------");
			System.out.println(" 1증속|2감속 |3중지 ");
			System.out.println("----------------");
			System.out.println("----------------");
			System.out.println("선택");
		}
		
		keyCode = System.in.read();
		
		if (keyCode == 49) {
			speed++;
			System.out.println(" 현재 속도 = " +speed );
		}   else if (keyCode == 50) {
			speed--;
			System.out.println(" 현재 속도 = " +speed );
		}   else if (keyCode == 51) {
			run = false;
			
			System.out.println(" 프로그램 종료"  );

	}

}
